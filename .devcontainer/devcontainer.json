// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:0-3.10",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"wowbox.code-debuger",
				"batisteo.vscode-django",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"magicstack.MagicPython",
				"yzhang.markdown-all-in-one",
				"DavidAnson.vscode-markdownlint",
				"ms-python.vscode-pylance",
				"benjamin-simmonds.pythoncpp-debug",
				"alexrsagen.python-debug-address-prompt",
				"nils-ballmann.python-coding-tools",
				"donjayamanne.python-extension-pack",
				"Mukundan.python-docs",
				"tht13.python",
				"vaisakh96.pythonic-snippets",
				"EricSia.pythonsnippets3",
				"Take-Me1010.pykv-snippets",
				"WeidaWang.quick-python-print",
				"dsebastien.vscode-python-pack",
				"HarryHopkinson.vs-code-runner",
				"docsmsft.docs-markdown",
				"ms-vscode.cpptools"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}